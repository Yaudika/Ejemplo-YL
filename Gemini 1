    <footer class="bg-gray-800 text-white text-center p-6 mt-16">
        <p>Página de startups generada por IA. Junio 2025.</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const llmButtons = document.querySelectorAll('.llm-button');
            const navButtons = document.querySelectorAll('.nav-button');
            const startupSections = document.querySelectorAll('.startup-section');

            function filterStartups(filterType) {
                startupSections.forEach(section => {
                    const processes = section.dataset.process.split(',');
                    if (filterType === 'all' || processes.includes(filterType)) {
                        section.style.display = 'block';
                    } else {
                        section.style.display = 'none';
                    }
                });
            }

            navButtons.forEach(button => {
                button.addEventListener('click', function() {
                    navButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    filterStartups(this.dataset.filter);
                });
            });

            // Initial filter to show all startups
            filterStartups('all');

            llmButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const action = this.dataset.action;
                    const startupId = this.dataset.startupId;
                    const outputDiv = document.getElementById(`${startupId}-llm-output`);
                    const descriptionElement = document.getElementById(`${startupId}-description`);
                    const technologyElement = document.getElementById(`${startupId}-technology`);

                    outputDiv.classList.remove('hidden');
                    outputDiv.innerHTML = '<p class="text-sm text-gray-500 italic">Cargando...</p>';

                    let prompt = '';
                    if (action === 'due-diligence') {
                        const description = descriptionElement ? descriptionElement.textContent : '';
                        prompt = `Basado en la siguiente descripción de la startup minera, genera 3 a 5 preguntas clave de diligencia debida que un inversor debería considerar. Formato: lista numerada. La descripción es: ${description}`;
                    } else if (action === 'trends') {
                        const technology = technologyElement ? technologyElement.textContent : '';
                        prompt = `Basado en la siguiente descripción de la tecnología y solución de la startup minera, identifica 1 o 2 tendencias tecnológicas clave o clasificaciones de mercado relevantes. Formato: lista con guiones. La descripción es: ${technology}`;
                    } else if (action === 'swot') {
                        const description = descriptionElement ? descriptionElement.textContent : '';
                        const technology = technologyElement ? technologyElement.textContent : '';
                        prompt = `Basado en la siguiente descripción de la startup minera y su tecnología, genera un análisis FODA (Fortalezas, Oportunidades, Debilidades, Amenazas) conciso. Utiliza un formato de lista con viñetas para cada sección. La descripción de la startup es: ${description}. La tecnología y solución es: ${technology}`;
                    }

                    if (!prompt) {
                        outputDiv.innerHTML = '<p class="text-red-500">Error: No se pudo generar el prompt.</p>';
                        return;
                    }

                    try {
                        let chatHistory = [];
                        chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                        const payload = { contents: chatHistory };
                        const apiKey = "";
                        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;
                        const response = await fetch(apiUrl, {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify(payload)
                                });
                        const result = await response.json();

                        if (result.candidates && result.candidates.length > 0 &&
                            result.candidates[0].content && result.candidates[0].content.parts &&
                            result.candidates[0].content.parts.length > 0) {
                            const text = result.candidates[0].content.parts[0].text;
                            outputDiv.innerHTML = `<div class="text-gray-700">${text.replace(/\n/g, '<br>')}</div>`;
                        } else {
                            outputDiv.innerHTML = '<p class="text-red-500">Error al obtener respuesta de la IA. Inténtalo de nuevo.</p>';
                            console.error('Unexpected API response structure:', result);
                        }
                    } catch (error) {
                        outputDiv.innerHTML = '<p class="text-red-500">Error de conexión. Asegúrate de que la API está accesible.</p>';
                        console.error('Error calling Gemini API:', error);
                    }
                });
            });
        });
    </script>
</body>
